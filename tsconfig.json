{
  "compilerOptions": {
    "target": "esnext",
		"module": "esnext",
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"resolveJsonModule": true,
		"noImplicitAny": false,
    "plugins": [
      {
        "name": "ts-vue-plugin"
      }
    ],
    "types": [
      "node",
      "webpack-env",
      "jest"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    ".eslintrc.js",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.tsx",
    "stories/.eslintrc.js",
    "stories/**/*.ts",
    "stories/**/*.js",
    "stories/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "tests/**/storybook.spec.ts"
  ]
}
